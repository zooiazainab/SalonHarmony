  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i> All Services</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Service</h2>
            <span class="text-light">Use the below form to Update a service</span>
        </div>

        <!-- add user form -->
        <!-- form handling -->
        <!-- ... (your existing HTML code) ... -->

        <form method="POST" id="update_service" action="/update_service/<%= service._id %>">
            <div class="update_service">
                <div class="form-group">
                    <label for="name" class="text-light">Service_Name</label>
                    <input type="text" name="name" value="<%= service.name %>" placeholder="HYDRA Facial">
                </div>
                <div class="form-group">
                    <label for="type" class="text-light">Service_Type</label>
                    <input type="text" name="type" value="<%= service.type %>" placeholder="Skin">
                </div>
                <div class="form-group">
                    <label for="descript" class="text-light">Description</label>
                    <input type="text" name="descript" value="<%= service.descript %>"
                        placeholder="This is hydra facial">
                </div>
                <div class="form-group">
                    <label for="price" class="text-light">Price</label>
                    <input type="number" name="price" value="<%= service.price %>" placeholder="5000">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">Save</button>
                </div>
            </div>
        </form>

        <!-- ... (your existing HTML code) ... -->


    </div>
</main>
